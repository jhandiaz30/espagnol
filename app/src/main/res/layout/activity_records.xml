<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".records">

    <EditText android:layout_height="wrap_content" android:layout_width="329dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:inputType="textPersonName" android:hint="nombre" android:ems="10" android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:id="@+id/txt_nombre"/>

    <EditText android:layout_height="303dp" android:layout_width="336dp" app:layout_constraintStart_toStartOf="parent" android:inputType="textMultiLine" android:ems="10" android:layout_marginTop="20dp" android:layout_marginStart="16dp" android:id="@+id/txt_contenido" app:layout_constraintTop_toBottomOf="@+id/txt_nombre" android:textColor="#FFFFFF" android:gravity="top" android:background="#1634F7"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:onClick="guardar"
        android:text="Guardar"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_contenido" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:onClick="consultar"
        android:text="Consultar"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/txt_contenido" />

</androidx.constraintlayout.widget.ConstraintLayout>